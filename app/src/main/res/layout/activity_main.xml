<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

	<!--放置当前活动的Fragment的容器-->
	<FrameLayout
		android:id="@+id/activeFragment_layout"
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="1"/>

	<!--底栏-->
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="56dp"
		android:orientation="horizontal"
		android:gravity="bottom">
		<TextView
			android:id="@+id/map_text"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:gravity="center"
			android:drawableTop="@android:drawable/ic_menu_mapmode"
			android:text="地图"/>
		<TextView
			android:id="@+id/list_text"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:gravity="center"
			android:drawableTop="@android:drawable/ic_menu_agenda"
			android:text="列表"/>
		<TextView
			android:id="@+id/release_text"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:gravity="center"
			android:drawableTop="@android:drawable/ic_menu_edit"
			android:text="发布"/>
		<TextView
			android:id="@+id/message_text"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:gravity="center"
			android:drawableTop="@android:drawable/ic_menu_info_details"
			android:text="消息"/>
		<TextView
			android:id="@+id/profile_text"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:gravity="center"
			android:drawableTop="@android:drawable/ic_menu_myplaces"
			android:text="个人"/>
	</LinearLayout>

</LinearLayout>
